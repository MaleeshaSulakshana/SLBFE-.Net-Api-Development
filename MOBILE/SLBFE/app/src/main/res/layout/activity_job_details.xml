<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    tools:context=".JobDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Software Engineeer"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/gray2"/>

        <TextView
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Company"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="Location : Colombo"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="Description : "
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="70dp"
            android:gravity="left"
            android:text="Description"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="Responsibilities : "
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:id="@+id/responsibilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="70dp"
            android:gravity="left"
            android:text="Responsibilities"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="Qualifications : "
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:id="@+id/qualifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="70dp"
            android:gravity="left"
            android:text="Qualifications"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:text="Skills : "
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:id="@+id/skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="70dp"
            android:gravity="left"
            android:text="Skills"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:paddingRight="20dp"
            android:gravity="right"
            android:text="Date : 2022-05-11"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="@color/gray2"/>

    </LinearLayout>

</ScrollView>